@model IEnumerable<Keramatian.Models.Announcement>

@{
    ViewBag.Title = "اخبار";
}

<div class="Clear"></div>
<div class="PanelDesign">
    <a href="/Announcement/Create">
        <div class="BtnCreate"></div>
    </a>
    @*<div class="BtnCreate">
    @Html.ActionLink("Create New", "Create")
</div>*@
    <table class="TableDesign">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summery)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.Raw(HttpUtility.HtmlDecode(item.Description))
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
            @Html.ActionLink("مشاهده جزئیات", "Details", new { id = item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
