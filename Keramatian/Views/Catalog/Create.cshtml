@model Keramatian.Models.Catalog

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Clear"></div>
<div class="PanelDesign">

@using (Html.BeginForm("Create", "Catalog", null, FormMethod.Post,
                              new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ایجاد کاتالوگ</legend>

        <div class="editor-label">
           @Html.DisplayName("نام ")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.Label("بارگذاری کاتالوگ")
        </div>
        <div class="editor-field">
            <input id="ImagePath" title="Upload a product image"
                type="file" name="file" />
        </div>

        <p>
            <input type="submit" value="" class="BtnCreate" />
        </p>
    </fieldset>
}

  <a href="/Catalog/Index">
        <div class="BackBtn"></div>
    </a>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
