@model IEnumerable<Keramatian.Models.LeatherCarpet>

@{
    ViewBag.Title = "گالری پوست فرش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="PanelDesign">


    <a href="/LeatherCarpet/Create">
        <div class="BtnCreate"></div>
    </a>

    <table class="TableDesign">
        <tr>
            <th>
                @Html.DisplayName("کد")
            </th>
            <th>
                @Html.DisplayName("طرح")
            </th>
            <th>
                @Html.DisplayName("بارکد")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Design)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BarCode)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
            @Html.ActionLink("مشاهده جزئیات", "Details", new { id = item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
