@model IEnumerable<Keramatian.Models.TopBanner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="PanelDesign">
<a href="/TopBanner/Create">
    <div class="BtnCreate"></div>
</a>
  
<table class="TableDesign">
    <tr>
        <th>
            @Html.DisplayName("اسم عکس")
        </th>
        <th>
            
            @Html.DisplayName("آدرس عکس")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id }) |
            @Html.ActionLink("مشاهده جزئیات", "Details", new { id=item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
