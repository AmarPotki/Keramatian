@model Keramatian.Models.Banner

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Clear"></div>
<div class="PanelDesign">

@using (Html.BeginForm("Create", "Banner", null, FormMethod.Post, 
                              new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>بارگذاری عکس جدید</legend>
        <div class="editor-label">
            @Html.Label("نام عکس")
        </div>
        <div class="editor-field">
           @Html.EditorFor(model => model.ImageName)
        </div>

        <div class="editor-label">
            @Html.Label("بارگذاری عکس")
        </div>
        <div class="editor-field">
            <input id="ImagePath" title="Upload a product image" 
                   type="file" name="file" />
        </div>
        
            <div class="editor-label">
                @Html.DisplayName("عکس سایت انگلیسی")
            </div>
            <div class="editor-field">
                <input id="enFile" title="Upload a product image"
                    type="file" name="enFile" />
            </div>
        <p><input type="submit" value="" class="BtnCreate" /></p>
    </fieldset>
}

 <a href="/Banner/Index">
        <div class="BackBtn"></div>
    </a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    </div>